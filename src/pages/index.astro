---
import Layout from '../layouts/Layout.astro';
import QuizContainer from '../components/QuizContainer';
import { Activity } from 'lucide-react';
import {fetchQuizzes} from '@/libs/fetchQuizzes'
const data = await fetchQuizzes();
const quizData=data.contents


---

<Layout title="アクセシビリティクイズ">
  <div class="min-h-screen bg-gradient-to-br from-purple-50 to-teal-50 px-4 py-10 pt-10">
    <header class="max-w-2xl mx-auto mb-8 text-center">
      <div class="flex items-center justify-center mb-3">
        <Activity size={32} className="text-purple-600 mr-2" aria-hidden="true"/>
        <h1 class="text-3xl md:text-4xl font-bold text-gray-800">
          アクセシビリティクイズ
        </h1>
      </div>
    </header>
    
    <main>
      <QuizContainer questions={quizData} client:load />
    </main>
    
    <footer class="max-w-2xl mx-auto mt-12 text-center text-gray-500 text-sm">
      <p>© 2025 yamari</p>
    </footer>
  </div>
</Layout>